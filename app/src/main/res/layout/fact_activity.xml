<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fact Text"
        android:id="@+id/fact_activity_textView_fact"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fact date"
        android:id="@+id/fact_activity_textView_factDate"
        android:layout_below="@+id/fact_activity_textView_fact"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fact category"
        android:id="@+id/fact_activity_textView_factCategory"
        android:textSize="12dp"
        android:layout_below="@+id/fact_activity_textView_factDate"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/fact_activity_textView_factDate"
        android:layout_alignEnd="@+id/fact_activity_textView_factDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="16"
        android:id="@+id/fact_activity_textView_wonderCount"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:textSize="26dp"
        android:layout_below="@+id/fact_activity_textView_fact"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Человек"
        android:id="@+id/textView2"
        android:layout_marginRight="46dp"
        android:layout_alignTop="@+id/fact_activity_textView_wonderCount"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Удивилось"
        android:id="@+id/textView"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/fact_activity_imageView_avatar"
        android:layout_marginBottom="60dp"
        android:src="@drawable/avatar1"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/fact_activity_textView_factCategory"
        android:layout_alignStart="@+id/fact_activity_textView_factCategory" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Сумма рейтингов:"
        android:id="@+id/fact_activity_textView_userRating"
        android:layout_below="@+id/fact_activity_textView_userFactsCount"
        android:layout_alignLeft="@+id/fact_activity_textView_userFactsCount"
        android:layout_alignStart="@+id/fact_activity_textView_userFactsCount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Добавлено фактов"
        android:id="@+id/fact_activity_textView_userFactsCount"
        android:layout_below="@+id/fact_activity_textView_userTitul"
        android:layout_alignLeft="@+id/fact_activity_textView_userTitul"
        android:layout_alignStart="@+id/fact_activity_textView_userTitul" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Титул"
        android:id="@+id/fact_activity_textView_userTitul"
        android:layout_below="@+id/fact_activity_textView_userName"
        android:layout_alignLeft="@+id/fact_activity_textView_userName"
        android:layout_alignStart="@+id/fact_activity_textView_userName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Фамилия Имя"
        android:id="@+id/fact_activity_textView_userName"
        android:textSize="20dp"

        android:layout_alignTop="@+id/fact_activity_imageView_avatar"
        android:layout_toRightOf="@+id/fact_activity_imageView_avatar"
        android:layout_toEndOf="@+id/fact_activity_imageView_avatar"
        android:layout_marginLeft="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fact_activity_button_favorite"

        android:src="@drawable/favorites_off"
        android:background="@null"
        android:layout_below="@+id/fact_activity_textView_userRating"
        android:layout_alignLeft="@+id/fact_activity_textView_userRating"
        android:layout_alignStart="@+id/fact_activity_textView_userRating"
        android:layout_marginTop="18dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fact_activity_button_share"

        android:src="@drawable/share"
        android:background="@null"
        android:layout_alignBottom="@+id/fact_activity_button_favorite"
        android:layout_toRightOf="@+id/fact_activity_button_favorite"
        android:layout_toEndOf="@+id/fact_activity_button_favorite"
        android:layout_marginLeft="20dp" />

</RelativeLayout>