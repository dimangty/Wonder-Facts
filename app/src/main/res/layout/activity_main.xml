<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.example.dima.worderfacts.MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/background"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        />

    <ImageButton
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:id="@+id/main_activity_button_categories"
        android:background="@null"
        android:src="@drawable/categories"
        android:layout_alignTop="@+id/main_activity_button_allFacts"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp" />

    <ImageButton
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:id="@+id/main_activity_button_desk"
        android:background="@null"
        android:src="@drawable/desk"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/main_activity_button_allFacts"
        android:layout_alignLeft="@+id/main_activity_button_allFacts"
        android:layout_alignStart="@+id/main_activity_button_allFacts" />

    <ImageButton
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:id="@+id/main_activity_button_favorites"
        android:background="@null"
        android:src="@drawable/favorites"
        android:layout_below="@+id/main_activity_button_desk"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:id="@+id/main_activity_button_allFacts"
        android:background="@null"
        android:layout_marginTop="75dp"
        android:src="@drawable/all_facts"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp" />

    <ImageButton
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:id="@+id/main_activity_button_topFacts"
        android:src="@drawable/top50"
        android:background="@null"
        android:layout_alignTop="@+id/main_activity_button_desk"
        android:layout_alignRight="@+id/main_activity_button_categories"
        android:layout_alignEnd="@+id/main_activity_button_categories" />

</RelativeLayout>
